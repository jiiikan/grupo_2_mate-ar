<header class="header">

    <img src="/images/LogoMateAr.png" alt="logo-Mater.ar" class="logo" onclick="location.href= '/'">

    <form action="/product" method="get" class="busqueda">
        <input type="text" name="buscar-producto" placeholder="Buscar..." class="cuadrado-busqueda" >
        <button type="submit" class="button-busqueda"><i class="fa-solid fa-magnifying-glass"></i></button>
    </form>

        <nav class="nav">
            <a href="/">Inicio</a>
            <a href="/products/catalogo">Catalogo</a> 
            <a href="/users/carrito">      
            <span href="clearfix d-none d-sm-inline-block">Carrito</span>
            <span class="badge red z-depth-1 mr-1 cart-number">0</span>
            </a> 

            <% if (locals.isLogged) { %>
                <img src="/images/users/<%= locals.userLogged.avatar %>" onclick="location.href='/users/perfil'"  width="40"   style="border-radius: 100%; margin-right: 5px;">
                <%= locals.userLogged.username %> 
                <select onchange="location = this.value" class="select">
                    <option value="/users/perfil">Mi perfil</option>
                    <option value="/users/logout">Cerrar Sesion</option>
                </select>
            <% } else {%>
            <a href="/users/registro">Registrarse</a>
            <a href="/users/login">Acceso</a>
            <% } %>
            
        </nav>

    <style>
    .header{
        padding: 20px;
        padding-bottom: 0px;
        text-align: center;
        background-color: #285430;;
    }

    .logo{ 
        width: 60%;
    }

    .busqueda{ 
        margin: 10px 0;
        display: flex;
        text-align: center;
        justify-content: center;
        
    }

    .cuadrado-busqueda { 
        font-weight: 500;
        width: 80%;
        border: none;
        background-color: #E5D9B6;
        border-start-start-radius: 10px;
        border-bottom-left-radius: 10px;
        padding: 10px;
        height: 13px;
    }

    .button-busqueda{
        color: #E5D9B6;
        padding: 1px 10px;
        border: none;
        background-color: #5F8D4E;
        border-end-end-radius: 10px;
        border-start-end-radius: 10px; 
    }

    .nav{
        margin: 5px 0;
        padding: 10px;
        border-top: #E5D9B6 solid 2px;
    }

    .nav a { 
        margin: 20px; 
        color: #fff5e2;
        font-weight: bold;
        text-decoration: none;
    }    
    
    .select{
        background-color: #5F8D4E;
        color: #E5D9B6;
        border-radius: 10px;
        border: none;
        margin: 0 5px;
        padding: 5px;
    }

    @media(min-width: 450px){
    /*tablet*/
    .header{ padding-bottom: 10px;}
}

    @media(min-width: 800px){
    /*desktop*/
    .header{ 
    padding: 20px 5% 5px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    }

    .logo{ width: 25%;}

    .busqueda{ width: 40%;}

    .nav{ width: 100%;}
    
    .button-busqueda{
        height: 33px;
    }
    .nav a{
        font-size: 18px;
    }
}   
    </style>
</header>