<!-- PAGINA DEL INICIO DE SESION DEL USUARIO -->

<!DOCTYPE html>
<html lang="en">

<head>
	<%- include("../partials/head") %>
		<title>Formulario Login</title>
		<link rel="stylesheet" href="/css/acceso.css">
</head>

<body>

	<%- include("../partials/header") %>

		<main class="main">
				<form method="POST" class="form-acceso" action="/users/login">
                  <h1 class="iniciar">Iniciar sesión</h1>


                    <label class="login-sub">Correo electrónico</label>
					<input type="text" name="email" class="login-input"  placeholder="Correo electrónico"  value="<%= ey.email || '' %>">
					<% if(typeof errores !="undefined" ){ %>
						<% for(let i=0; i < errores.length; i++) {%>
							<% if (errores[i].path=="email" ) { %>
								<small class="text-danger">
									<%= errores[i].msg %>
								</small>
								<% } %>
									<% } %>
										<% } %>

					<label class="login-sub" id="contra">Contraseña</label>
					<input type="password" name="password" placeholder="Contraseña" class="login-input">
					<% if(typeof errores !="undefined" ){ %>
						<% for(let i=0; i < errores.length; i++) {%>
							<% if (errores[i].path=="password" ) { %>
								<small class="text-danger">
									<%= errores[i].msg %>
								</small>
								<% } %>
									<% } %>
										<% } %>


				<label class="login-sub">
					<input type="checkbox" class="boton_remember"
						name="remember">Recordar mi usuario
				</label>

				<div class="bottom">
					<button type="submit"
						class="boton-iniciar">Iniciar sesión</button>
			</div>
			<h3 class="go-register">¿No tienes una cuenta? <a href="/users/registro"> Regístrate aquí</a></h3>
				</form>
				
		</main>

		<%- include("../partials/footer") %>

</body>

</html>