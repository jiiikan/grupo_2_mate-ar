<!DOCTYPE html>
<html lang="en">

<%- include("../partials/head") %>

<head>
    <link rel="stylesheet" href="/css/catalogo.css">
    <title>Catalogo</title>
</head>

<body>
    <%- include("../partials/header.ejs") %>

  <main class="main">

    <h1>Catalogo</h1>
    <!-- filter para filtrar por categoria idea -->

    <section class="array-products">
    <% for( let i = 0; i < products.length; i++ ) { %>

      <article class="producto" onclick="location.href= '/products/detalle/<%= products[i].id%>'">

        <img src="/images/<%= products[i].imagen %>" alt="Producto 1" class="imag">
        <h3><%= products[i].nombre %></h3>
        <p class="descripcion"><%= products[i].descripcion %></p>
        <span class="precio">$<%= products[i].precio %></span>
        
      </article>

    <% } %>
    </section>

  <section class="section-input">
    <input type="submit" id="boton_agregar" value="Cargar producto" onclick="location.href= '/products/create'">
  </section>

  </main>

  <%- include("../partials/footer") %>

  </body>
</html>